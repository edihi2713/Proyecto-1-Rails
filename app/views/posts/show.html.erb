
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= link_to 'Volver', posts_path %>
      <h1><%= @post.title %></h1>
      <div><%= markdown(@post.body) %></div>
      <div class="comments">
               <h2>Comentarios</h2>
               <% @post.comments.each do |comment| %>
                 <div class="panel panel-default">
                   <div class="panel-heading"><small><%= comment.user.email %> coment√≥ hace <%= distance_of_time_in_words(Time.now,comment.created_at) %></small></div>
                     <div class="panel-body">
                      <%= comment.body %> <br>
                     </div>
                 </div>
               <% end %>

               <% if signed_in? %>
                 <%= form_for [@post, @post.comments.build] do |f| %>
                   <div class="form-group">
                     <%= f.text_area :body, class: "form-control", placeholder: "Agregar comentario" %>
                   </div>

                   <div class="actions text-right">
                     <%= f.submit "Comentar", class: "btn btn-primary" %>
                   </div>
                 <% end %>
               <% end %>
        </div>

    </div>
  </div>
</div>

